with "openclada.gpr";
with "openclada-cl_gl.gpr";
with "glfw.gpr";

project OpenCLAda.Tests is

   for Source_Dirs use ("tests");
   for Object_Dir use "obj";
   for Exec_Dir use "bin";
   type Os_Type is
      ("Windows", "Linux", "MacOSX");
   Os : Os_Type := external ("GL_Backend");
   
   for Main use ("cl_test-context.adb", "cl_test-device.adb", "cl_test-memory.adb",
                 "cl_test-platform.adb", "cl_test-vectors.adb", "cl_test-hello_world.adb",
                 "cl_test-cl_gl.adb", "cl_test-vector_passing.adb");

   package Compiler is
      for Default_Switches ("ada") use ("-g", "-O2", "-gnatn", "-gnatf", "-gnat05", "-gnata");
   end Compiler;

   package Builder is
      for Default_Switches ("ada") use ("-m");
   end Builder;

end OpenCLAda.Tests;

